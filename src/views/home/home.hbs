<main id="home-main">
    <img class="title-logo" src="../../../public/img/logo.png" alt="">
    <h1 class="title-home">Real Estate Sozopol</h1>

    <form method="get" action="/catalog/search?" id="home-form">
        <ul class="search-ul">
            <li class="search-li">
                <label for="type">Вид имот</label>
                <select name="type" id="type">
                    <option value="1-СТАЕН">1-СТАЕН</option>
                    <option value="2-СТАЕН">2-СТАЕН</option>
                    <option value="3-СТАЕН">3-СТАЕН</option>
                    <option value="МНОГОСТАЕН">МНОГОСТАЕН</option>
                    <option value="КЪЩА">КЪЩА</option>
                    <option value="ХОТЕЛ">ХОТЕЛ</option>
                    <option value="МАГАЗИН">МАГАЗИН</option>
                    <option value="РЕСТОРАНТ">РЕСТОРАНТ</option>
                    <option value="ПАРЦЕЛ">ПАРЦЕЛ</option>
                    <option value="ВСИЧКИ">ВСИЧКИ</option>
                </select>
            </li>
            <li class="search-li">
                <label for="sort">Сортиране според</label>
                <select name="sort" id="sort">
                    <option value="lowest">Най-ниска цена</option>
                    <option value="highest">Най-висока цена</option>
                    <option value="newest">Най-нови обяви</option>
                </select>
            </li>
            <li class="search-li">
                <label for="price">Макс.цена <span>(EUR)</span></label>
                <input type="number" name="price" id="price">
            </li>
            <li class="search-li">
                <label for="area">Мин. кв. <span>(кв.м.)</span></label>
                <input type="number" name="area" id="area">
            </li>
        </ul>
        {{!-- <a href="" id="search-btn">ТЪРСИ</a> --}}
        <button type="submit" id="search-btn">ТЪРСИ</button>
    </form>
    <div class="last-added-title">
        <h2>Последно добавени имоти</h2>
    </div>

    <div class="last-added-container">
        {{#each lastAdded}}
        <a href="/catalog/{{_id}}/details">
            <img src="{{images.0.url}}" alt="">
            <div class="ad-info">
                <span class="ad-type">{{type}}</span>
                <span class="ad-kvadratura">{{area}}кв.м</span>
                <span class="ad-cena">{{price}} EUR</span>
            </div>
        </a>
        {{/each}}
    </div>
</main>