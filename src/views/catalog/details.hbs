<main id="details-page">
    <div class="confirm">
        <div class="confirm-window">
            <div class="confirm-titlebar">
                <span class="confirm-title"></span>
                <button onclick="showHideConfirm()" class="confirm-close">x</button>
            </div>
            <div class="confirm-content">Сигурен ли си, че искаш да изтриеш тази обява?</div>
            <div class="confirm-buttons">
                <a href="/catalog/{{ad._id}}/delete" class="confirm-button">Да</a>
                <button onclick="showHideConfirm()" class="confirm-button">Не</button>
            </div>
        </div>
    </div>
    <div class="details-container">
        {{#if isUser}}
        {{#if isAuthor}}
        <div class="edit-delete">
            <a href="/catalog/{{ad._id}}/edit" class="edit">Редактирай</a>
            <div onclick="showHideConfirm()" class="delete">Изтрий</div>
        </div>
        {{else}}
        <div class="favourites">
            {{#if isInFavourites}}
            <a href="/catalog/{{ad._id}}/removeFromFavourites" class="remove-from-fav">Премахни от наблюдавани</a>
            {{else}}
            <a href="/catalog/{{ad._id}}/addToFavourites" class="add-to-fav">Наблюдавай обявата</a>
            {{/if}}
        </div>
        {{/if}}
        {{/if}}

        <h1>{{ad.type}}</h1>
        <h2>{{ad.location}}</h2>
        <div class="image-wrapper">
            <i id="left" class="fa-solid fa-angle-left"></i>
            <div class="carousel">
                {{#each ad.images}}
                <img src="{{url}}" alt="">
                {{/each}}
            </div>
            <i id="right" class="fa-solid fa-angle-right"></i>
        </div>
        <div class="description">
            <h3>Основна информация</h3>
            <div class="desc-table">
                <table>
                    <tbody>
                        <tr>
                            <td>Локация</td>
                            <td>{{ad.location}}</td>
                        </tr>
                        <tr>
                            <td>Цена</td>
                            <td>{{ad.price}} EUR</td>
                        </tr>
                        <tr>
                            <td>Площ</td>
                            <td>{{ad.area}} кв.м</td>
                        </tr>
                        {{#if ad.floor}}
                        <tr>
                            <td>Етаж</td>
                            <td>{{ad.floor}}</td>
                        </tr>
                        {{/if}}
                        <tr>
                            <td>Телефон</td>
                            <td>{{ad.phoneNumber}}</td>
                        </tr>
                        <tr>
                            <td>Видяно</td>
                            <td>{{ad.views}} пъти</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <h3>Допълнителна информация</h3>
            <p>{{ad.info}}</p>
        </div>

    </div>
</main>
<script src="../../../public/js/imageCarousel.js" defer></script>